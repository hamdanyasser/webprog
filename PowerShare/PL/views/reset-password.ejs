<%- include('partials/head') %>

<nav class="navbar navbar-light bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="/">
            <i class="fas fa-bolt"></i> PowerShare
        </a>
        <span class="text-muted">Remember your password? <a href="/login">Login</a></span>
    </div>
</nav>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="fas fa-lock fa-3x text-primary"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Reset Password</h2>
                            <p class="text-muted">Enter your new password below</p>
                        </div>

                        <% if (message) { %>
                            <div class="alert <%= message.includes('successfully') ? 'alert-success' : 'alert-danger' %> text-center">
                                <%= message %>
                            </div>
                        <% } %>

                        <form id="resetPasswordForm" action="/reset-password" method="POST">
                            <input type="hidden" name="token" value="<%= token %>">
                            
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" id="newPassword" name="newPassword" 
                                           placeholder="Enter new password" required>
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">
                                        <i class="fas fa-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                                <div id="passwordError" class="text-danger mt-1 small"></div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label small text-muted fw-bold">Password Requirements:</label>
                                <ul class="small text-muted mb-0 ps-3">
                                    <li id="req-length" class="mb-1"><i class="fas fa-circle me-2" style="font-size: 6px;"></i>Minimum 8 characters</li>
                                    <li id="req-uppercase" class="mb-1"><i class="fas fa-circle me-2" style="font-size: 6px;"></i>At least 1 uppercase letter (A-Z)</li>
                                    <li id="req-lowercase" class="mb-1"><i class="fas fa-circle me-2" style="font-size: 6px;"></i>At least 1 lowercase letter (a-z)</li>
                                    <li id="req-digit" class="mb-1"><i class="fas fa-circle me-2" style="font-size: 6px;"></i>At least 1 digit (0-9)</li>
                                    <li id="req-special" class="mb-1"><i class="fas fa-circle me-2" style="font-size: 6px;"></i>At least 1 special character (!@#$%^&*...)</li>
                                </ul>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                                <i class="fas fa-check me-2"></i>Reset Password
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <a href="/login" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <p class="text-muted">
                        Don't have an account?
                        <a href="/register" class="fw-bold text-decoration-none">Sign up for free</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .validation-met {
        color: #28a745 !important;
    }
    .validation-met i {
        content: '\f058';
    }
    .validation-unmet {
        color: #dc3545 !important;
    }
    .mb-1 {
        list-style: none;
    }
</style>

<script>
    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('newPassword');
        const toggleIcon = document.getElementById('toggleIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }

    function validatePassword(password) {
        const requirements = {
            length: password.length >= 8,
            uppercase: /[A-Z]/.test(password),
            lowercase: /[a-z]/.test(password),
            digit: /[0-9]/.test(password),
            special: /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(password)
        };

        document.getElementById('req-length').className = 'mb-1 ' + (requirements.length ? 'validation-met' : 'validation-unmet');
        document.getElementById('req-uppercase').className = 'mb-1 ' + (requirements.uppercase ? 'validation-met' : 'validation-unmet');
        document.getElementById('req-lowercase').className = 'mb-1 ' + (requirements.lowercase ? 'validation-met' : 'validation-unmet');
        document.getElementById('req-digit').className = 'mb-1 ' + (requirements.digit ? 'validation-met' : 'validation-unmet');
        document.getElementById('req-special').className = 'mb-1 ' + (requirements.special ? 'validation-met' : 'validation-unmet');

        return Object.values(requirements).every(req => req);
    }

    document.getElementById('newPassword').addEventListener('input', function(e) {
        const password = e.target.value;
        const errorDiv = document.getElementById('passwordError');
        
        if (password.length > 0) {
            const isValid = validatePassword(password);
            if (!isValid) {
                errorDiv.textContent = 'Password does not meet all requirements';
            } else {
                errorDiv.textContent = '';
            }
        } else {
            errorDiv.textContent = '';
            ['length', 'uppercase', 'lowercase', 'digit', 'special'].forEach(req => {
                document.getElementById('req-' + req).className = 'mb-1';
            });
        }
    });

    document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const password = document.getElementById('newPassword').value;
        const errorDiv = document.getElementById('passwordError');
        
        if (!password) {
            errorDiv.textContent = 'Password is required';
            return;
        }

        const isValid = validatePassword(password);
        if (!isValid) {
            errorDiv.textContent = 'Please ensure all password requirements are met';
            return;
        }

        const submitBtn = this.querySelector('button[type="submit"]');
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Resetting password...';
        
        this.submit();
    });
</script>

<%- include('partials/footer') %>
