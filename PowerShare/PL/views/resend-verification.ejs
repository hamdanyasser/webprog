<%- include('partials/head') %>
<title>Resend Verification - PowerShare</title>
    <style>
        .resend-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .resend-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 40px;
            max-width: 450px;
            width: 100%;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-section h1 {
            color: #6366F1;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>

    <div class="resend-container">
        <div class="resend-card">
            <div class="logo-section">
                <h1>âš¡ PowerShare</h1>
                <p class="text-muted">Resend Verification Email</p>
            </div>

            <div id="alert-container"></div>

            <form id="resend-form">
                <div class="mb-4">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="Enter your email"
                        required
                    >
                    <small class="text-muted">
                        We'll send a new verification link to this email
                    </small>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3" id="submit-btn">
                    <i class="fas fa-envelope"></i> Send Verification Email
                </button>

                <div class="text-center">
                    <a href="/login" class="text-decoration-none">
                        <i class="fas fa-arrow-left"></i> Back to Login
                    </a>
                </div>
            </form>

            <div id="success-message" style="display: none;">
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <strong>Success!</strong> Verification email sent. Please check your inbox.
                </div>
                <a href="/login" class="btn btn-primary w-100">
                    Go to Login
                </a>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById('resend-form');
        const submitBtn = document.getElementById('submit-btn');
        const alertContainer = document.getElementById('alert-container');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const email = document.getElementById('email').value;

            // Disable submit button
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Sending...';

            try {
                const response = await fetch('/api/auth/resend-verification', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });

                const data = await response.json();

                if (response.ok) {
                    // Show success
                    form.style.display = 'none';
                    document.getElementById('success-message').style.display = 'block';
                } else {
                    // Show error
                    showAlert(data.message, 'danger');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-envelope"></i> Send Verification Email';
                }
            } catch (error) {
                console.error('Resend error:', error);
                showAlert('An error occurred. Please try again.', 'danger');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-envelope"></i> Send Verification Email';
            }
        });

        function showAlert(message, type) {
            alertContainer.innerHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
        }
    </script>
<%- include('partials/footer') %>