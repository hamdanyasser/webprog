<%- include('partials/head') %>
<%- include('partials/dashboard-navbar', { dashboardTitle: 'Find Generators', navbarClass: 'bg-primary' }) %>

<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar-user', { activePage: 'generators' }) %>

        <div class="col-md-9 col-lg-10 px-4 py-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">
                        <i class="fas fa-search me-2 text-primary"></i>Find Generator
                    </h2>
                    <p class="text-muted mb-0">Browse available generators and choose a plan that suits your needs.</p>
                </div>
            </div>

            <div id="activeSubscriptionAlert" style="display: none;" class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <strong>You already have an active subscription!</strong> 
                <span id="currentSubscriptionDetails"></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <div id="generatorsContainer" class="row g-4">
                <div class="col-12 text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-3">Loading available generators...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="subscribeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-plug me-2"></i>Subscribe to Generator
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="generatorDetails">
                </div>
                
                <div class="mt-4">
                    <h6 class="fw-bold mb-3">Select a Plan</h6>
                    <div id="pricingPlansContainer">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmSubscribeBtn" disabled>
                    <i class="fas fa-check me-2"></i>Confirm Subscription
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let selectedGeneratorId = null;
    let selectedPlanId = null;
    let hasActiveSubscription = false;

    document.addEventListener('DOMContentLoaded', async function() {
        await checkActiveSubscription();
        await loadGenerators();
    });

    async function checkActiveSubscription() {
        try {
            const response = await fetch('/api/subscriptions/my');
            const data = await response.json();

            if (data.success && data.data && data.data.length > 0) {
                const activeSubscription = data.data.find(sub => sub.status === 'active');
                if (activeSubscription) {
                    hasActiveSubscription = true;
                    displayActiveSubscriptionAlert(activeSubscription);
                }
            }
        } catch (error) {
            console.error('Error checking subscription:', error);
        }
    }

    function displayActiveSubscriptionAlert(subscription) {
        const alert = document.getElementById('activeSubscriptionAlert');
        const details = document.getElementById('currentSubscriptionDetails');
        details.innerHTML = `You are subscribed to ${subscription.generator_name} with ${subscription.plan_name} plan ($${subscription.monthly_price}/month). 
            <a href="/dashboard" class="alert-link">Go to Dashboard</a> to manage your subscription.`;
        alert.style.display = 'block';
    }

    async function loadGenerators() {
        try {
            const response = await fetch('/api/generators');
            const data = await response.json();

            if (data.success && data.data) {
                displayGenerators(data.data);
            } else {
                displayError('Failed to load generators');
            }
        } catch (error) {
            console.error('Error loading generators:', error);
            displayError('Error loading generators. Please try again.');
        }
    }

    function displayGenerators(generators) {
        const container = document.getElementById('generatorsContainer');

        if (!generators || generators.length === 0) {
            container.innerHTML = `
                <div class="col-12 text-center py-5">
                    <i class="fas fa-plug fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Generators Available</h5>
                    <p class="text-muted">There are currently no generators available in your area.</p>
                </div>
            `;
            return;
        }

        container.innerHTML = generators.map(generator => `
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100 generator-card">
                    <div class="card-header bg-${getStatusColor(generator.status)}-light border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-${getStatusColor(generator.status)}">
                                ${generator.status}
                            </span>
                            <span class="text-muted small">
                                <i class="fas fa-users me-1"></i>${generator.capacity?.activeSubscribers || generator.subscriber_count || 0} subscribers
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-3">
                            <i class="fas fa-plug text-primary me-2"></i>${generator.generator_name}
                        </h5>
                        <div class="generator-details mb-3">
                            <div class="detail-item mb-2">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                <span class="text-muted">${generator.location}</span>
                            </div>
                            <div class="detail-item mb-2">
                                <i class="fas fa-bolt text-warning me-2"></i>
                                <span class="text-muted">Capacity: ${generator.capacity_kw} kW (${generator.capacity?.maxAmperage || 0}A)</span>
                            </div>
                            ${generator.owner_name ? `
                            <div class="detail-item mb-2">
                                <i class="fas fa-user text-muted me-2"></i>
                                <span class="text-muted">Owner: ${generator.owner_name}</span>
                            </div>
                            ` : ''}
                        </div>
                        ${generator.capacity ? `
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted fw-semibold">Capacity Usage</small>
                                <small class="text-muted">
                                    <span class="badge bg-${getCapacityColor(generator.capacity.status)} rounded-pill">
                                        ${generator.capacity.capacityPercentage.toFixed(0)}%
                                    </span>
                                </small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-${getCapacityColor(generator.capacity.status)}"
                                     role="progressbar"
                                     style="width: ${generator.capacity.capacityPercentage}%"
                                     aria-valuenow="${generator.capacity.capacityPercentage}"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-1">
                                <small class="text-muted">${generator.capacity.usedAmperage}A used</small>
                                <small class="text-${generator.capacity.canAcceptNew ? 'success' : 'danger'} fw-semibold">
                                    ${generator.capacity.availableAmperage}A available
                                </small>
                            </div>
                        </div>
                        ` : ''}
                        ${generator.status === 'active' ? `
                            <button class="btn btn-primary w-100"
                                    onclick="openSubscribeModal(${generator.generator_id})"
                                    ${!generator.capacity?.canAcceptNew || hasActiveSubscription ? 'disabled' : ''}>
                                <i class="fas fa-${generator.capacity?.canAcceptNew ? 'plus' : 'ban'} me-2"></i>
                                ${generator.capacity?.canAcceptNew ? 'Subscribe Now' : 'At Capacity'}
                            </button>
                        ` : `
                            <button class="btn btn-secondary w-100" disabled>
                                <i class="fas fa-exclamation-circle me-2"></i>Not Available
                            </button>
                        `}
                    </div>
                </div>
            </div>
        `).join('');
    }

    async function openSubscribeModal(generatorId) {
        selectedGeneratorId = generatorId;
        
        try {
            const genResponse = await fetch(`/api/generators/${generatorId}`);
            const genData = await genResponse.json();

            if (!genData.success) {
                alert('Failed to load generator details');
                return;
            }

            const generator = genData.data;
            
            document.getElementById('generatorDetails').innerHTML = `
                <div class="alert alert-light">
                    <h6 class="fw-bold mb-2">${generator.generator_name}</h6>
                    <p class="mb-1 small"><i class="fas fa-map-marker-alt me-2"></i>${generator.location}</p>
                    <p class="mb-0 small"><i class="fas fa-bolt me-2"></i>Capacity: ${generator.capacity_kw} kW</p>
                </div>
            `;

            const plansResponse = await fetch(`/api/pricing-plans/generator/${generatorId}`);
            const plansData = await plansResponse.json();

            if (plansData.success && plansData.data) {
                displayPricingPlans(plansData.data);
            } else {
                document.getElementById('pricingPlansContainer').innerHTML = `
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        No pricing plans available for this generator.
                    </div>
                `;
            }

            const modal = new bootstrap.Modal(document.getElementById('subscribeModal'));
            modal.show();
        } catch (error) {
            console.error('Error opening subscribe modal:', error);
            alert('Failed to load generator details. Please try again.');
        }
    }

    function displayPricingPlans(plans) {
        const container = document.getElementById('pricingPlansContainer');
        
        if (!plans || plans.length === 0) {
            container.innerHTML = `
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    No pricing plans available.
                </div>
            `;
            return;
        }

        container.innerHTML = plans.map(plan => `
            <div class="plan-card mb-3" onclick="selectPlan(${plan.plan_id})">
                <div class="card plan-option" id="plan-${plan.plan_id}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="fw-bold mb-1">${plan.plan_name}</h6>
                                <p class="text-muted small mb-2">${plan.description || 'Standard electricity plan'}</p>
                                <span class="badge bg-info">${plan.amperage}A</span>
                            </div>
                            <div class="text-end">
                                <div class="h4 fw-bold text-primary mb-0">$${parseFloat(plan.monthly_price).toFixed(2)}</div>
                                <small class="text-muted">per month</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `).join('');
    }

    function selectPlan(planId) {
        selectedPlanId = planId;
        
        document.querySelectorAll('.plan-option').forEach(card => {
            card.classList.remove('border-primary', 'border-2');
        });
        
        const selectedCard = document.getElementById(`plan-${planId}`);
        selectedCard.classList.add('border-primary', 'border-2');
        
        document.getElementById('confirmSubscribeBtn').disabled = false;
    }

    document.getElementById('confirmSubscribeBtn').addEventListener('click', async function() {
        if (!selectedGeneratorId || !selectedPlanId) {
            alert('Please select a plan');
            return;
        }

        try {
            const response = await fetch('/api/subscriptions/subscribe', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    generator_id: selectedGeneratorId,
                    plan_id: selectedPlanId
                })
            });

            const result = await response.json();

            if (result.success) {
                alert('Subscription successful! Welcome aboard! ðŸŽ‰');
                window.location.href = '/dashboard';
            } else {
                alert('Subscription failed: ' + result.message);
            }
        } catch (error) {
            console.error('Subscription error:', error);
            alert('Failed to create subscription. Please try again.');
        }
    });

    function getStatusColor(status) {
        const colors = {
            'active': 'success',
            'inactive': 'secondary',
            'maintenance': 'warning'
        };
        return colors[status] || 'secondary';
    }

    function getCapacityColor(status) {
        const colors = {
            'good': 'success',
            'moderate': 'info',
            'warning': 'warning',
            'critical': 'danger'
        };
        return colors[status] || 'secondary';
    }

    function displayError(message) {
        const container = document.getElementById('generatorsContainer');
        container.innerHTML = `
            <div class="col-12 text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                <h5 class="text-danger">${message}</h5>
                <button class="btn btn-primary mt-3" onclick="loadGenerators()">
                    <i class="fas fa-sync me-2"></i>Retry
                </button>
            </div>
        `;
    }
</script>

<style>
    .generator-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .generator-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .plan-card {
        cursor: pointer;
    }
    
    .plan-option {
        border: 2px solid #e0e0e0;
        transition: all 0.2s;
    }
    
    .plan-option:hover {
        border-color: #0d6efd;
        background-color: #f8f9fa;
    }
    
    .detail-item {
        display: flex;
        align-items: center;
    }
</style>

<%- include('partials/footer') %>

